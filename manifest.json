{
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": false,
      "match_about_blank": false,
      "run_at": "document_start"
    }
  ],
  "background": {
    "page": "pages/background.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "Video Call Helper"
  },
  "manifest_version": 2,
  "name": "Video Call Helper",
  "description": "Video Call Helper",
  "version": "0.0.1",
  "permissions": [
    "http://*/",
    "https://*/",
    "activeTab",
    "tabs",
    "storage"
  ],
  "web_accessible_resources": [
    "scripts/inject.js",
    "modules/processStream.js",
    "node_modules/@mediapipe/face_mesh/*",
    "styles/*.css",
    "pages/*.html"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline'",
  "options_page": "pages/options.html"
}

{
  "manifest_version": 2,
  "name": "Video Call Helper",
  "description": "Show WebRTC PeerConnection Events and Audio Levels for debugging",
  "version": "0.1.0",
  "icons": {
    "16": "icons/v_16.png",
    "48": "icons/v_48.png",
    "128": "icons/v_128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://meet.google.com/*",
        "https://webrtc.github.io/samples/*",
        "https://meet.jit.si/*",
        "https://meet.jitsi.org/",
        "https://*.session.com/*",
        "https://whereby.com/*",
        "https://duo.google.com/*"
      ],
      "all_frames": false,
      "match_about_blank": false,
      "run_at": "document_start"
    }
  ],
  "background": {
    "page": "pages/background.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "Video Call Helper"
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "styles/*.css",
    "pages/*.html",
    "scripts/*.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
}

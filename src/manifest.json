{
  "name": "Video Call Helper",
  "action": {
    "default_icon": {
      "16": "images/v_16.png",
      "48": "images/v_48.png",
      "128": "images/v_128.png"
        },
    "default_title": "Video Call Helper"
  },
  "manifest_version": 3,
  "version": "0.3.1",
  "icons": {
    "16": "images/v_16.png",
    "48": "images/v_48.png",
    "128": "images/v_128.png"
  },
  "description": "Video Call Helper",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "unlimitedStorage",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [],
      "all_frames": true,
      "match_about_blank": false,
      "run_at": "document_start",
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'; style-src 'self' 'unsafe-inline'; worker-src 'self'",
    "isolated_world": "script-src 'self' 'unsafe-inline'"
  },
  "options_page": "pages/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "pages/*.html",
        "scripts/*.js",
        "styles/*.css",
        "images/*.png"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
